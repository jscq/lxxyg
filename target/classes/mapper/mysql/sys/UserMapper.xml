<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.chengqing.model.sys.User">
	<cache type="org.mybatis.caches.ehcache.LoggingEhcache" readOnly="true"/>
	<!-- 使用Memcached分布式缓存 -->
	<!--  
	<cache type="org.mybatis.caches.memcached.MemcachedCache" />
	-->

	<resultMap id="BaseResultMap" type="com.chengqing.model.sys.User">
		<id column="id" property="id" jdbcType="VARCHAR" />
		<result column="userName" property="userName" jdbcType="VARCHAR" />
		<result column="passWord" property="passWord" jdbcType="VARCHAR" />
	</resultMap>
	
	<sql id="Base_Column_List">
		id as id,
		version as version,
		createTime as createTime,
		updateTime as updateTime,
		createUserId as createUserId,
		updateUserId as updateUserId,
		validFrom as validFrom,
		validTo as validTo,
		sn as sn,
		userName as userName,
		passWord as passWord
	</sql>
	
	<!-- 校验用户名  -->
	<select id="selectByUserName" resultType="java.lang.Long" parameterType="java.lang.String">
		select 
			count(id)
		from user
		where userName = #{userName}
	</select>
	
	<!-- 根据ID查询 -->
	<select id="selectById" resultMap="BaseResultMap" parameterType="java.lang.String">
		select
		<include refid="Base_Column_List" />
		from user
		where id = #{id}
	</select>
	
	<!-- 查询list -->
	<select id="select" resultMap="BaseResultMap" parameterType="java.lang.String">
		select
		<include refid="Base_Column_List" />
		from user
		<include refid="Base_Where_Clause" />
	</select>
	
	<!-- 查询count  -->
	<select id="selectCount" resultType="java.lang.Long" parameterType="java.lang.String">
		select 
			count(id)
		from user
		<include refid="Base_Where_Clause" />
	</select>
	
	
	<sql id="Base_Where_Clause">
		<where>
			<trim prefixOverrides="and">
				<if test="null!=userName and ''!=userName">and userName like CONCAT('%',#{userName},'%')</if>
			</trim>
		</where>
		
		<if test="start != null and rows != null">
			order by createTime asc
		
			limit #{start}, #{rows}
		</if>
	</sql>
	
	<!-- 根据ID删除 -->
	<delete id="deleteById" parameterType="java.lang.String">
		delete from user
		where id = #{id}
	</delete>

	<!-- 添加 -->	
	<insert id="insert" parameterType="com.chengqing.model.sys.User">
		insert into user (
			id, 
			version, 
			createTime,
			createUserId,
			validFrom,
			validTo,
			sn,
			userName,
			passWord
		)
		values (
			#{id},
			#{version}, 
			#{createTime},
			#{createUserId},
			#{validFrom},
			#{validTo},
			#{sn},
			#{userName},
			#{passWord}
		)
	</insert>
	
	<!-- 通过ID更新 -->
	<update id="updateByIdSelective" parameterType="com.chengqing.model.sys.User">
		update user
		<set>
			<if test=" userName != null ">userName = #{userName},</if>
			<if test=" passWord != null ">passWord = #{passWord}</if>
		</set>
		where id = #{id} 
	</update>
	
</mapper>